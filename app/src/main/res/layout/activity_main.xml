<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg_shadow20"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ScheduleButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="290dp"
        android:background="#3a99d7"
        android:text="GPS 스케줄 매니저"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/FootprintButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#3a99d7"
        android:text="오늘의 발자취"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_strk"
        android:elevation="0dp"
        android:text="설정"
        android:textColor="#3a99d7" />

</LinearLayout>