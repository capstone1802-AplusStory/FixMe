<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nayunpark.fixme_ui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.aplusstory.fixme.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aplusstory.fixme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aplusstory.fixme.ScheduleActivity" />
        <activity android:name="com.aplusstory.fixme.SettingsActivity" />
        <activity android:name="com.aplusstory.fixme.FootDataSettingsActivity" />
        <activity android:name="com.aplusstory.fixme.AlarmPeriodActivity" />
        <activity android:name="com.aplusstory.fixme.AlarmOpacityActivity" />
        <activity android:name="com.aplusstory.fixme.LightSensActivity" />
        <activity android:name="com.aplusstory.fixme.ScheduleTimeActivity" />
        <activity android:name="com.aplusstory.fixme.ScheduleRepeationActivity" />
        <activity android:name="com.aplusstory.fixme.ScheduleAlarmActivity" />
        <activity android:name="com.aplusstory.fixme.ScheduleColorActivity" />
        <activity
            android:name="com.aplusstory.fixme.FullAlarmActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_alarm"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="com.aplusstory.fixme.FootprintActivity" />
        <activity android:name="com.aplusstory.fixme.FavoriteActivity" />
        <activity android:name="com.aplusstory.fixme.FootprintRoutineActivity" />
    </application>

</manifest>